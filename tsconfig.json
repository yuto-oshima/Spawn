{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2017"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
		"target": "es5",
		"allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules/**",
    "vendor/**",
    "public/**"
  ],
  "compileOnSave": false
}
